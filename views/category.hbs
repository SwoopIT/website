<div class="center" style="margin: 20px 20px;">
    <div class="row col s12" style="margin-top: -7px">
        <div class="center">
            <h3>Add Category</h3>

            <form onsubmit="return false">
                <div class="row">
                    <div class="input-field col s6">
                        <input id="name" type="text" class="validate">
                        <label for="name">Category Name</label>
                    </div>
                    <div class="input-field col s6">
                        <select title="Stores" id="store">
                            <option value="" disabled selected>Select a Store</option>
                        </select>
                        <label>Store</label>
                    </div>
                </div>
                <button type="submit" class="btn btn-large blue white-text"
                        onclick="addCategory($('#name').val(), $('#store').val())">
                    Submit
                </button>
            </form>
        </div>
    </div>
</div>

<script>
    var categories, items, stores;
    var storeNames = {
        mcd: 'McDonald\'s',
        fdl: 'Foodland',
        kta: 'KTA',
        lnl: 'L&L Barbecue',
        bgk: 'Burger King',
        longs: 'Longs Drugs',
        csc: 'Costco'
    };
    document.addEventListener('DOMContentLoaded', async function () {
        categories = await getCategories();
        items = await getItems();
        stores = await getStores();
        for (i = 0; i < stores.length; i++) {
            $('#store').append('<option value="' + stores[i].code + '">' + stores[i].name + '</option>');
        }
        var elems = document.querySelectorAll('select');
        var instances = M.FormSelect.init(elems);
    });
</script>