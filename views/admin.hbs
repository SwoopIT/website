<script>
    document.addEventListener('DOMContentLoaded', async function () {
        try {
            categories = await getCategories();
            items = await getItems();
            users = await getUsers();
            $('#preloader').hide();
            $('#item-count').html('Item Count: ' + items.length);
            $('#category-count').html('Category Count: ' + categories.length);
            $('#user-count').html('User Count: ' + users.length);
            $('#order-count').html('Order Count: ' + 'null');
        } catch (e) {
            console.log(e);
        }
    });
</script>
